{
  "name": "@fransvilhelm/wp-bundler",
  "version": "2.1.1",
  "description": "A fast bundler tailored for WordPress based on esbuild",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/adambrgmn/wp-bundler.git"
  },
  "author": {
    "name": "Adam Bergman",
    "email": "adam@fransvilhelm.com"
  },
  "homepage": "https://github.com/adambrgmn/wp-bundler#readme",
  "license": "MIT",
  "bin": {
    "wp-bundler": "./cli.js"
  },
  "files": [
    "dist",
    "assets",
    "cli.js"
  ],
  "keywords": [
    "wordpress",
    "esbuild",
    "bundler"
  ],
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "node bundle.mjs",
    "dev": "node bundle.mjs --watch",
    "lint": "eslint . --ext .ts --ext .tsx --ext .js --ignore-path .gitignore",
    "test": "jest",
    "type-check": "tsc --noEmit",
    "release": "yarn build && yarn changeset publish",
    "prepare": "husky install",
    "examples:start": "cd examples && npx -p @wordpress/env wp-env start",
    "examples:destroy": "cd examples && npx -p @wordpress/env wp-env destroy",
    "examples:stop": "cd examples && npx -p @wordpress/env wp-env stop",
    "examples:build": "yarn --cwd ./examples/wp-bundler-theme build && yarn --cwd ./examples/wp-bundler-plugin build"
  },
  "dependencies": {
    "@swc/core": "^1.2.212",
    "chokidar": "^3.5.3",
    "esbuild": "^0.14.49"
  },
  "devDependencies": {
    "@changesets/cli": "^2.23.1",
    "@fransvilhelm/changeset-changelog": "^1.1.1",
    "@prettier/plugin-php": "^0.18.9",
    "@trivago/prettier-plugin-sort-imports": "^3.2.0",
    "@types/gettext-parser": "^4.0.1",
    "@types/jest": "^28.1.4",
    "@types/lodash.debounce": "^4.0.7",
    "@types/lodash.merge": "^4.6.7",
    "@types/lodash.mergewith": "^4.6.7",
    "@types/md5": "^2.3.2",
    "@types/node": "^18.0.3",
    "@types/strman": "^2.0.0",
    "@types/ws": "^8.5.3",
    "@types/yargs": "^17.0.10",
    "chalk": "^5.0.1",
    "dotenv": "^16.0.1",
    "eslint": "^8.19.0",
    "eslint-config-react-app": "^7.0.1",
    "filesize": "^9.0.11",
    "gettext-parser": "^5.1.2",
    "globby": "^13.1.2",
    "husky": ">=8.0.1",
    "jest": "^28.1.2",
    "lint-staged": ">=13.0.3",
    "lodash.debounce": "^4.0.8",
    "lodash.merge": "^4.6.2",
    "lodash.mergewith": "^4.6.2",
    "md5": "^2.3.0",
    "php-parser": "^3.0.3",
    "postcss": "^8.4.14",
    "postcss-preset-env": "^7.7.2",
    "prettier": "^2.7.1",
    "strman": "^2.0.1",
    "twing": "^5.1.1",
    "type-fest": "^2.16.0",
    "typescript": "^4.7.4",
    "ws": "^8.8.0",
    "xstate": "^4.32.1",
    "yargs": "^17.5.1",
    "zod": "^3.17.3"
  },
  "peerDependencies": {
    "typescript": ">4.0.0"
  },
  "bugs": {
    "url": "https://github.com/adambrgmn/wp-bundler/issues"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "lint-staged": {
    "*.{ts,js}": "eslint --cache --fix",
    "*.{ts,js,md,php,yml,json}": "prettier --write"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "proseWrap": "never",
    "printWidth": 120,
    "importOrder": [
      "^node:(.*)$",
      "<THIRD_PARTY_MODULES>",
      "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
  }
}
