{
  "name": "@fransvilhelm/wp-bundler",
  "version": "2.1.1",
  "description": "A fast bundler tailored for WordPress based on esbuild",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/adambrgmn/wp-bundler.git"
  },
  "author": {
    "name": "Adam Bergman",
    "email": "adam@fransvilhelm.com"
  },
  "homepage": "https://github.com/adambrgmn/wp-bundler#readme",
  "license": "MIT",
  "bin": {
    "wp-bundler": "./cli.js"
  },
  "files": [
    "dist",
    "assets",
    "cli.js"
  ],
  "keywords": [
    "wordpress",
    "esbuild",
    "bundler"
  ],
  "scripts": {
    "build": "node bundle.mjs",
    "dev": "node bundle.mjs --watch",
    "lint": "eslint . --ext .ts --ext .tsx --ext .js --ignore-path .gitignore",
    "test": "jest",
    "type-check": "tsc --noEmit",
    "release": "yarn build && yarn changeset publish",
    "prepare": "husky install"
  },
  "dependencies": {
    "@swc/core": "^1.2.118",
    "chokidar": "^3.5.2",
    "esbuild": "^0.14.2"
  },
  "devDependencies": {
    "@babel/code-frame": "^7.16.0",
    "@changesets/cli": "^2.18.1",
    "@fransvilhelm/changeset-changelog": "^1.0.1",
    "@prettier/plugin-php": "^0.17.6",
    "@trivago/prettier-plugin-sort-imports": "^3.2.0",
    "@types/babel__code-frame": "^7.0.3",
    "@types/gettext-parser": "^4.0.1",
    "@types/jest": "^27.0.3",
    "@types/lodash.debounce": "^4.0.6",
    "@types/lodash.merge": "^4.6.6",
    "@types/lodash.mergewith": "^4.6.6",
    "@types/md5": "^2.3.1",
    "@types/node": "^16.11.12",
    "@types/react": "^17.0.37",
    "@types/strman": "^2.0.0",
    "@types/ws": "^8.2.2",
    "@types/yargs": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "@xstate/react": "^1.6.3",
    "autoprefixer": "^10.4.0",
    "babel-eslint": "^10.1.0",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-flowtype": "^5.10.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^24.7.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-testing-library": "^3.10.2",
    "filesize": "^8.0.6",
    "gettext-parser": "^4.2.0",
    "globby": "^11.0.4",
    "husky": ">=7.0.4",
    "ink": "^3.2.0",
    "jest": "^27.4.3",
    "lint-staged": ">=12.1.2",
    "lodash.debounce": "^4.0.8",
    "lodash.merge": "^4.6.2",
    "lodash.mergewith": "^4.6.2",
    "md5": "^2.3.0",
    "php-parser": "^3.0.3",
    "postcss": "^8.4.4",
    "postcss-preset-env": "^7.0.1",
    "prettier": "^2.5.1",
    "react": "^17.0.2",
    "strman": "^2.0.1",
    "ts-node": "^10.4.0",
    "twing": "^5.1.0",
    "type-fest": "^2.8.0",
    "typescript": "^4.5.2",
    "ws": "^8.3.0",
    "xstate": "^4.26.1",
    "yargs": "^17.5.1",
    "zod": "^3.11.6"
  },
  "peerDependencies": {
    "typescript": ">4.0.0"
  },
  "bugs": {
    "url": "https://github.com/adambrgmn/wp-bundler/issues"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "lint-staged": {
    "*.{ts,js}": "eslint --cache --fix",
    "*.{ts,js,md,php,yml,json}": "prettier --write"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "proseWrap": "never",
    "printWidth": 120,
    "importOrder": [
      "^node:(.*)$",
      "<THIRD_PARTY_MODULES>",
      "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
  }
}
